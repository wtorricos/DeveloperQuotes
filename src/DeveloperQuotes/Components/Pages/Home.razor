@page "/"
@attribute [RenderModeInteractiveServer(prerender: false)]

<PageTitle>Random Quote</PageTitle>

@inject QuoteFactory quoteFactory;
@inject NavigationManager navigationManager;

@code {

    protected override Task OnInitializedAsync()
    {

        // Redirect to a random quote
        QuoteModel quoteDefinition = quoteFactory.GetRandomQuote();
        navigationManager.NavigateTo($"/quote/{quoteDefinition.Id}");
        return Task.CompletedTask;
    }
}
